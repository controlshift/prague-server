<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form", role: "form") do |f| %>
  <div class="form-group"><h2>Sign in</h2></div>

  <div class="form-group"><%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true %></div>

  <div class="form-group"><%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %></div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div class="form-group"><%= f.submit "Sign in" %></div>

  <div class="form-group"><%= render "devise/shared/links" %></div>
<% end %>
